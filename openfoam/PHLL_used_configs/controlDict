FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     ML_pimpleFoam;

startFrom       startTime;

startTime       20000;

stopAt          endTime;

endTime         40000;

deltaT          1;

writeControl    runTime;

writeInterval   500;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression off;

timeFormat      fixed;

timePrecision   0;

runTimeModifiable true;

maxCo  0.5;

adjustTimeStep  yes;




